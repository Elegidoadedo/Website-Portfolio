---
import Card from "./Card.astro";
import OpenSourceCard from "./OpenSourceCard.astro";
import projectsList from "../content/projects";
import openSourceProjectsList from "../content/openSourceProjects";
import SectionTitle from "./SectionTitle.astro";
---

<>
  <SectionTitle title="Projects" id="projects" icon="user" />
  {
    projectsList.map((project) => (
      <Card
        name={project.name}
        description={project.description}
        link={project.link}
        tags={project.stack}
        image={project.image}
      />
    ))
  }
  <h4 class="text-2xl mb-4">Open Source projects contributions</h4>
  <div class="flex flex-col md:flex-row items-center gap-8">
    {
      openSourceProjectsList.map((project) => (
        <OpenSourceCard
          iconName={project.iconName}
          name={project.name}
          link={project.link}
          image={project.image}
        />
      ))
    }
  </div>
</>
