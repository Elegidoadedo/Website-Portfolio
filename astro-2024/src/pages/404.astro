---
import LayoutHeadless from "../layouts/LayoutHeadless.astro";
---

<LayoutHeadless metaDescription="404 Page not found">
  <section
    class="flex flex-col justify-center items-center h-screen w-full gap-4"
  >
    <img
      src="images/grogu.webp"
      width="200"
      height="200"
      alt="Grogu miniature saying hi!"
      class="bounce"
    />
    <h1 class="text-2xl md:text-5xl">THIS IS NOT THE WAY</h1>
    <h2 class="text-xl md:text-4xl">404 - Page not found</h2>
    <a href="/" class="text-blue-500">Go back to the homepage</a>
  </section>
</LayoutHeadless>

<style>
  .bounce {
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-30px);
    }
    60% {
      transform: translateY(-15px);
    }
  }
</style>
